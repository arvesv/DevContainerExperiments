# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files you want to always be normalized
*.c     text
*.h     text
*.cpp   text
*.cs    text
*.java  text
*.js    text
*.ts    text
*.py    text
*.rb    text
*.go    text
*.php   text
*.html  text
*.css   text
*.scss  text
*.md    text
*.json  text
*.xml   text
*.yml   text
*.yaml  text

# Declare binary files
*.png   binary
*.jpg   binary
*.jpeg  binary
*.gif   binary
*.ico   binary
*.pdf   binary
*.zip   binary
*.gz    binary
*.tar   binary
*.mp3   binary
*.mp4   binary
*.mov   binary
*.exe   binary
*.dll   binary

# Prevent linguist from classifying certain files as documentation
docs/** linguist-documentation=false

# Mark shell scripts as text with LF endings
*.sh    text eol=lf

# Mark batch files as text with CRLF endings
*.bat   text eol=crlf
*.cmd   text eol=crlf